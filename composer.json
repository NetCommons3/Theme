{
    "name":        "netcommons/theme-settings",
    "description": "ThemeSettings Plugin for CakePHP",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "theme"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name":     "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/THemeSettings/graphs/contributors"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":        "~2.4",
        "cakephp/debug_kit":      "~2.2",
        "cakedc/migrations":      "~2.2",
        "ezyang/htmlpurifier":    "~4.6",
        "chronon/mobile_detect":  "*",
        "twbs/bootstrap":         "~3.1",
        "components/jquery":      "~2.1"
    },
    "require-dev": {
        "netcommons/users":       "dev-master",
        "satooshi/php-coveralls": "dev-master",
        "mustangostang/spyc": "dev-master"
    },
    "config": {
        "vendor-dir": "vendors"
    }
}
